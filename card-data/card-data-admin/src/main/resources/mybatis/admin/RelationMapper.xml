<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdtd.card.data.admin.dao.RelationMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.bdtd.card.data.admin.model.Relation">
		<id column="id" property="id" />
		<result column="menuid" property="menuid" />
		<result column="roleid" property="roleid" />
	</resultMap>

    <insert id="insertList" parameterType="map">
        insert into sys_relation(menuid, roleid) values 
        <foreach collection="menuIds" item="item" separator="," >
            (#{item}, #{roleId})
        </foreach>
    </insert>
</mapper>
